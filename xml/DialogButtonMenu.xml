<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- loginscreen -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol always="true">300</defaultcontrol>
	<onload>SetProperty(SidebarPos,LEFT,Home)</onload>
	<onload>SetProperty(DialogPos,RIGHT,Home)</onload>	
	<onunload>ClearProperty(SidebarPos,Home)</onunload>
	<onunload>ClearProperty(DialogPos,Home)</onunload>	

	<controls>

		<control type="image">
			<texture background="true">common/blue.jpg</texture>
		</control>

		<!-- Main group -->
		<control type="group">

			<control type="image">
				<texture background="true" colordiffuse="$INFO[Skin.String(Color.BBBg)]">common/white.png</texture>
			</control>			


			<!-- Background -->
			<control type="image">
				<top>0</top>
				<left>0</left>
				<width>1920</width>
				<height>1080</height>
				<colordiffuse>$VAR[InitColor1]</colordiffuse>
				<texture background="true">common/white.png</texture>
				<visible>true</visible>
			</control>			

			<!-- Logo -->
			<control type="image">
				<left>324</left>
				<top>334</top>
				<width>356</width>
				<height>356</height>
				<colordiffuse>$VAR[InitColor2]</colordiffuse>
				<texture>common/kodi.png</texture>
				<aspectratio aligny="center">keep</aspectratio>
			</control>
			<control type="image">
				<left>476</left>
				<top>334</top>
				<width>356</width>
				<height>356</height>
				<colordiffuse>$VAR[InitColor3]</colordiffuse>
				<texture>common/kover.png</texture>
				<aspectratio aligny="center">keep</aspectratio>
			</control>
			<control type="label">
				<left>550</left>
				<top>490</top>
				<width>499</width>
				<height>50</height>
				<align>left</align>
				<aligny>center</aligny>
				<font>Font60R</font>
				<textcolor>$VAR[InitColor4]</textcolor>
				<label>31144</label>
				<animation effect="rotate" start="0" end="45" time="0" center="560,500" condition="true">Conditional</animation>
			</control>

			<control type="group">
				<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
				<!-- View -->
				<control type="list" id="300">
					<left>860</left>
					<top>362</top>
					<width>636</width>
					<height>356</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>Close</onleft>
					<onright>noop</onright>
					<orientation>vertical</orientation>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="sine" easing="out">240</scrolltime>

							<itemlayout width="636" height="119">
								<control type="image">
									<left>20</left>
									<top>20</top>
									<width>80</width>
									<height>80</height>
									<align>center</align>
									<aspectratio>keep</aspectratio>
									<colordiffuse>$VAR[InitColor5]</colordiffuse>
									<texture>$INFO[ListItem.Icon]</texture>
								</control>
								<control type="label">
									<left>130</left>
									<top>20</top>
									<width>499</width>
									<height>50</height>
									<align>left</align>
									<aligny>center</aligny>
									<font>Font27</font>
									<textcolor>$VAR[InitColor5]</textcolor>
									<label>$INFO[ListItem.Label]</label>
								</control>
								<control type="label">
									<left>130</left>
									<top>50</top>
									<width>499</width>
									<height>50</height>
									<align>left</align>
									<aligny>center</aligny>
									<font>FontSmallR</font>
									<textcolor>$VAR[InitColor2]</textcolor>
									<label>$INFO[ListItem.Label2]</label>
								</control>
							</itemlayout>

							<focusedlayout width="637" height="118">
								<control type="image">
									<left>0</left>
									<top>0</top>
									<width>636</width>
									<height>118</height>
									<aspectratio>scale</aspectratio>
									<colordiffuse>$VAR[InitColor6]</colordiffuse>
									<texture>common/white.png</texture>
								</control>
								<control type="image">
									<left>0</left>
									<top>0</top>
									<width>636</width>
									<height>118</height>
									<aspectratio>scale</aspectratio>
									<texture colordiffuse="$VAR[CategoryColor]">common/white.png</texture>
								</control>
								<control type="image">
									<left>0</left>
									<top>0</top>
									<width>118</width>
									<height>118</height>
									<aspectratio>scale</aspectratio>
									<colordiffuse>$VAR[InitColor8]</colordiffuse>
									<texture>common/white.png</texture>
								</control>
								<control type="image">
									<left>20</left>
									<top>20</top>
									<width>80</width>
									<height>80</height>
									<align>center</align>
									<aspectratio>keep</aspectratio>
									<colordiffuse>$VAR[InitColor4]</colordiffuse>
									<texture>$INFO[ListItem.Icon]</texture>
								</control>
								<control type="label">
									<left>130</left>
									<top>20</top>
									<width>499</width>
									<height>50</height>
									<align>left</align>
									<aligny>center</aligny>
									<font>Font27</font>
									<textcolor>$VAR[InitColor4]</textcolor>
									<label>$INFO[ListItem.Label]</label>
								</control>
								<control type="label">
									<left>130</left>
									<top>50</top>
									<width>499</width>
									<height>50</height>
									<align>left</align>
									<aligny>center</aligny>
									<font>FontSmallR</font>
									<textcolor>$VAR[InitColor7]</textcolor>
									<label>$INFO[ListItem.Label2]</label>
								</control>
							</focusedlayout>
							<content>
								<item>
									<label>13012</label>
									<icon>material/power.png</icon>
									<onclick>XBMC.Quit()</onclick>
									<visible>System.ShowExitButton</visible>
									<onup>noop</onup>
								</item>
								<item>
									<label>13016</label>
									<icon>material/powerdown.png</icon>
									<onclick>XBMC.Powerdown()</onclick>
									<visible>System.CanPowerDown</visible>
								</item>
								<item>
									<label>13011</label>
									<icon>material/suspend.png</icon>
									<onclick>XBMC.Suspend()</onclick>
									<visible>System.CanSuspend</visible>
								</item>
								<item>
									<label>13010</label>
									<icon>material/hibernate.png</icon>
									<onclick>XBMC.Hibernate()</onclick>
									<visible>System.CanHibernate</visible>
								</item>
								<item>
									<label>13013</label>
									<icon>material/reboot.png</icon>
									<onclick>XBMC.Reset()</onclick>
									<visible>System.CanReboot</visible>
								</item>
								<item>
									<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
									<icon>material/logoff.png</icon>
									<onclick>dialog.close(all,true)</onclick>
									<onclick>System.LogOff</onclick>
									<visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
									<visible>System.Loggedon</visible>
								</item>
								<item>
									<label>20045</label>
									<icon>material/master.png</icon>
									<onclick>xbmc.mastermode</onclick>
									<visible>System.HasLocks</visible>
								</item>
								<item>
									<label>20046</label>
									<icon>material/master.png</icon>
									<onclick>xbmc.mastermode</onclick>
									<visible>!System.HasLocks</visible>
								</item>
								<item>
									<label>13017</label>
									<onclick>XBMC.InhibitIdleShutdown(true)</onclick>
									<visible>System.HasShutdown +!System.IsInhibit</visible>
								</item>
								<item>
									<label>13018</label>
									<onclick>XBMC.InhibitIdleShutdown(false)</onclick>
									<visible>System.HasShutdown + System.IsInhibit</visible>
								</item>
								<item>
									<label>20150</label>
									<label2>$INFO[System.Alarmpos,T-,]</label2>
									<icon>material/timer.png</icon>
									<onclick>XBMC.AlarmClock(shutdowntimer,XBMC.Shutdown())</onclick>
									<visible>!System.HasAlarm(shutdowntimer)</visible>
									<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
								</item>
								<item>
									<label>20151</label>
									<icon>material/timeroff.png</icon>
									<onclick>XBMC.CancelAlarm(shutdowntimer)</onclick>
									<visible>System.HasAlarm(shutdowntimer)</visible>
								</item>
							</content>
						</control>
				</control>

		</control>

		<!-- Dialogs Background -->
		<include content="DialogBgDef">
			<param name="CompPrefix" value="DIA.View1" />
		</include>		

	</controls>

</window>