<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- favourites -->
	<defaultcontrol always="true">450</defaultcontrol>
	<onload>ClearProperty(favourite.1.name,home)</onload>
	<onload>ClearProperty(favourite.2.name,home)</onload>
	<onload>ClearProperty(favourite.3.name,home)</onload>
	<onload>ClearProperty(favourite.4.name,home)</onload>
	<onload>ClearProperty(favourite.5.name,home)</onload>
	<onload>ClearProperty(favourite.6.name,home)</onload>
	<onload>ClearProperty(favourite.7.name,home)</onload>
	<onload>ClearProperty(favourite.8.name,home)</onload>
	<onload>ClearProperty(favourite.9.name,home)</onload>
	<onload>ClearProperty(favourite.10.name,home)</onload>
	<onunload condition="System.HasAddon(script.favourites) + Skin.HasSetting(HomeFavourites)">RunScript(script.favourites)</onunload>
	<onload condition="String.IsEmpty(Window(Home).Property(DialogVisibility)) + String.IsEmpty(Window(Home).Property(DialogVisibility2))">SetProperty(DialogVisibility,$INFO[Window.Property(xmlfile)]1,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility)) + String.IsEmpty(Window(Home).Property(DialogVisibility2))">SetProperty(DialogVisibility2,$INFO[Window.Property(xmlfile)]2,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.IsEmpty(Window(Home).Property(DialogVisibility3))">SetProperty(DialogVisibility3,$INFO[Window.Property(xmlfile)]3,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4))">SetProperty(DialogVisibility4,$INFO[Window.Property(xmlfile)]4,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))">SetProperty(DialogVisibility5,$INFO[Window.Property(xmlfile)]5,Home)</onload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.Contains(Window(Home).Property(DialogVisibility),Favourites) + String.Contains(Window(Home).Property(DialogVisibility),$NUMBER[1])">ClearProperty(DialogVisibility,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.Contains(Window(Home).Property(DialogVisibility2),Favourites) + String.Contains(Window(Home).Property(DialogVisibility2),$NUMBER[2])">ClearProperty(DialogVisibility2,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.Contains(Window(Home).Property(DialogVisibility3),Favourites) + String.Contains(Window(Home).Property(DialogVisibility3),$NUMBER[3])">ClearProperty(DialogVisibility3,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility5)) + String.Contains(Window(Home).Property(DialogVisibility4),Favourites) + String.Contains(Window(Home).Property(DialogVisibility4),$NUMBER[4])">ClearProperty(DialogVisibility4,Home)</onunload>
	<onunload>ClearProperty(DialogVisibility5,Home)</onunload>
	
	<controls>
		
		<control type="group">
			<visible>[String.Contains(Window(Home).Property(DialogVisibility),Favourites) + String.Contains(Window(Home).Property(DialogVisibility),$NUMBER[1]) + String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] | 
					[String.Contains(Window(Home).Property(DialogVisibility2),Favourites) + String.Contains(Window(Home).Property(DialogVisibility2),$NUMBER[2]) + String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility3),Favourites) + String.Contains(Window(Home).Property(DialogVisibility3),$NUMBER[3]) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility4)Favourites) + String.Contains(Window(Home).Property(DialogVisibility4),$NUMBER[4]) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility5),Favourites)  + String.Contains(Window(Home).Property(DialogVisibility5),$NUMBER[5])]</visible>
			
			<include content="DialogPOS">
				<param name="DialogName" value="DiaFavorites" />
			</include>

		</control>

	</controls>

</window>