<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- addoninformation -->
	<defaultcontrol always="true">300</defaultcontrol>
	<onload condition="String.IsEmpty(Window(Home).Property(DialogVisibility)) + String.IsEmpty(Window(Home).Property(DialogVisibility2))">SetProperty(DialogVisibility,$INFO[Window.Property(xmlfile)]1,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility)) + String.IsEmpty(Window(Home).Property(DialogVisibility2))">SetProperty(DialogVisibility2,$INFO[Window.Property(xmlfile)]2,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.IsEmpty(Window(Home).Property(DialogVisibility3))">SetProperty(DialogVisibility3,$INFO[Window.Property(xmlfile)]3,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4))">SetProperty(DialogVisibility4,$INFO[Window.Property(xmlfile)]4,Home)</onload>
	<onload condition="!String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))">SetProperty(DialogVisibility5,$INFO[Window.Property(xmlfile)]5,Home)</onload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.Contains(Window(Home).Property(DialogVisibility),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility),$NUMBER[1])">ClearProperty(DialogVisibility,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.Contains(Window(Home).Property(DialogVisibility2),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility2),$NUMBER[2])">ClearProperty(DialogVisibility2,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.Contains(Window(Home).Property(DialogVisibility3),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility3),$NUMBER[3])">ClearProperty(DialogVisibility3,Home)</onunload>
	<onunload condition="String.IsEmpty(Window(Home).Property(DialogVisibility5)) + String.Contains(Window(Home).Property(DialogVisibility4),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility4),$NUMBER[4])">ClearProperty(DialogVisibility4,Home)</onunload>
	<onunload>ClearProperty(DialogVisibility5,Home)</onunload>
	
	<controls>
		
		<control type="group">
			<visible>[String.Contains(Window(Home).Property(DialogVisibility),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility),$NUMBER[1]) + String.IsEmpty(Window(Home).Property(DialogVisibility2)) + String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] | 
					[String.Contains(Window(Home).Property(DialogVisibility2),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility2),$NUMBER[2]) + String.IsEmpty(Window(Home).Property(DialogVisibility3)) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility3),AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility3),$NUMBER[3]) + String.IsEmpty(Window(Home).Property(DialogVisibility4)) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility4)AddonInfo) + String.Contains(Window(Home).Property(DialogVisibility4),$NUMBER[4]) + String.IsEmpty(Window(Home).Property(DialogVisibility5))] |
					[String.Contains(Window(Home).Property(DialogVisibility5),AddonInfo)  + String.Contains(Window(Home).Property(DialogVisibility5),$NUMBER[5])]</visible>
			
			<include content="DialogPOS">
				<param name="DialogName" value="DiaInfos" />
			</include>					

		</control>

		<!-- Launch Addon Button -->					
		<control type="button" id="12">
			<visible>false</visible>
		</control>

		<!-- Configure Addon Button -->
		<control type="button" id="9">
			<visible>false</visible>
		</control>
		
		<!-- Update Addon Button -->
		<control type="button" id="8">
			<visible>false</visible>
		</control>						

		<!-- Install/UnInstall Addon button -->
		<control type="button" id="6">
			<visible>false</visible>
		</control>		

		<!-- Enable/Disable Addon button -->
		<control type="button" id="7">
			<visible>false</visible>
		</control>		

		<!-- Auto Update -->
		<control type="radiobutton" id="13">
			<visible>true</visible>
			<top>0</top>
			<left>-1000</left>
			<width>0</width>
			<height>0</height>
		</control>		

		<!-- Changelog Button -->
		<control type="button" id="10">
			<visible>false</visible>
		</control>		


	</controls>

</window>