<?xml version="1.0" encoding="UTF-8"?>
<window>

	<!-- MusicOSD -->
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload>Control.SetFocus(9000,2)</onload>
	<zorder>3</zorder>

	<controls>
		<control type="group">
			<visible>!Window.IsVisible(10123) + !Window.IsVisible(10124) + !Window.IsVisible(10610) + !Window.IsVisible(10611) + !Window.IsVisible(12000) + !Window.IsVisible(10140)</visible>	
			<control type="grouplist">
				<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDV</include>
				<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDH</include>
				<visible>!Window.IsVisible(fullscreeninfo)</visible>
				<control type="list" id="9000">
					<focusposition>0</focusposition>
					<scrolltime>200</scrolltime>
					<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDVMenu</include>
					<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDHMenu</include>
					<animation effect="slide" start="0,0" end="1800,0" time="0" condition="Skin.String(HOM.View1.BBSidebar,RIGHT) + !Skin.HasSetting(ForceOSDBottom)">Conditional</animation>
					<animation effect="slide" start="0,0" end="0,960" time="0" condition="Skin.String(HOM.View1.BBSidebar,BOTTOM) | Skin.HasSetting(ForceOSDBottom)">Conditional</animation>

					<itemlayout width="80" height="80">
						<control type="image">
							<left>15</left> 
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$INFO[Skin.String(Color.SBIconNF)]">$INFO[ListItem.Icon]</texture>
						</control>
					</itemlayout>

					<focusedlayout width="80" height="80">
						<control type="button">
							<texturefocus></texturefocus>
							<texturenofocus></texturenofocus>
							<onfocus>SetProperty(MenuID,$INFO[Container(9000).ListItem.Label])</onfocus>
							<onfocus>SetProperty(MenuIcon,$INFO[Container(9000).ListItem.Icon])</onfocus>
							<onfocus>SetProperty(MenuCategory,$INFO[Container(9000).ListItem.Property(LabelID)])</onfocus>
						</control>
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[CategoryColor]">$INFO[ListItem.Icon]</texture>
						</control>
					</focusedlayout>
					<content>
						<item id="1">
							<label>-</label>
							<icon>osd/skipprevious.png</icon>
							<onclick>PlayerControl(Previous)</onclick>
						</item>			
						<item id="2">
							<label>-</label>
							<icon>osd/rewind.png</icon>
							<onclick>PlayerControl(Rewind)</onclick>
						</item>		
						<item id="3">
							<label>-</label>
							<icon>osd/play.png</icon>
							<onclick>PlayerControl(Play)</onclick>
						</item>
						<item id="4">
							<label>-</label>
							<icon>osd/stop.png</icon>
							<onclick>PlayerControl(Stop)</onclick>
						</item>
						<item id="5">
							<label>-</label>
							<icon>osd/ffwd.png</icon>
							<onclick>PlayerControl(Forward)</onclick>
						</item>	
						<item id="6">
							<label>-</label>
							<icon>osd/skipnext.png</icon>
							<onclick>PlayerControl(Next)</onclick>
						</item>						
					</content>
				</control>

				<control type="list" id="9001">
					<focusposition>0</focusposition>
					<scrolltime>200</scrolltime>
					<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDVMenu</include>
					<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDHMenu</include>
					<animation effect="slide" start="0,0" end="1800,0" time="0" condition="Skin.String(HOM.View1.BBSidebar,RIGHT) + !Skin.HasSetting(ForceOSDBottom)">Conditional</animation>
					<animation effect="slide" start="0,0" end="0,960" time="0" condition="Skin.String(HOM.View1.BBSidebar,BOTTOM) | Skin.HasSetting(ForceOSDBottom)">Conditional</animation>

					<itemlayout width="80" height="80">
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$INFO[Skin.String(Color.SBIconNF)]">$INFO[ListItem.Icon]</texture>
						</control>
					</itemlayout>

					<focusedlayout width="80" height="80">
						<control type="button">
							<texturefocus></texturefocus>
							<texturenofocus></texturenofocus>
							<onfocus>SetProperty(MenuID,$INFO[Container(9000).ListItem.Label])</onfocus>
							<onfocus>SetProperty(MenuIcon,$INFO[Container(9000).ListItem.Icon])</onfocus>
							<onfocus>SetProperty(MenuCategory,$INFO[Container(9000).ListItem.Property(LabelID)])</onfocus>
						</control>
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[CategoryColor]">$INFO[ListItem.Icon]</texture>
						</control>
					</focusedlayout>
					<content>
						<!-- Infos -->
						<item id="1">
							<label>36501</label>
							<icon>material/info1.png</icon>
							<onclick>ActivateWindow(fullscreeninfo)</onclick>
						</item>
						<!-- Repeat ON -->					
						<item id="2">
							<label>486</label>
							<icon>osd/repeaton.png</icon>
							<onclick>PlayerControl(Repeat)</onclick>
							<visible>Playlist.IsRepeat</visible>
						</item>
						<!-- Repeat OFF -->					
						<item id="3">
							<label>486</label>
							<icon>osd/repeatoff.png</icon>
							<onclick>PlayerControl(Repeat)</onclick>
							<visible>!Playlist.IsRepeat</visible>
						</item>
						<!-- Random -->					
						<item id="4">
							<label>590</label>
							<icon>osd/randomon.png</icon>
							<onclick>PlayerControl(Random)</onclick>
							<visible>Player.IsRandom</visible>
						</item>
						<!-- Random -->					
						<item id="5">
							<label>590</label>
							<icon>osd/randomoff.png</icon>
							<onclick>PlayerControl(Random)</onclick>
							<visible>!Player.IsRandom</visible>
						</item>
						<!-- Playlist -->
						<item id="7">
							<label>136</label>
							<icon>osd/playlist.png</icon>
							<onclick>ActivateWindow(MusicPlaylist)</onclick>
						</item>
						<!-- Visualisation -->
						<item id="8">
							<label>250</label>
							<icon>DefaultAddonVisualization.png</icon>
							<onclick>SendClick(10120,500)</onclick>
						</item>
						<!-- Visualisation Settings -->
						<item id="9">
							<label>240</label>
							<icon>DefaultAddonService.png</icon>
							<onclick>Addon.Default.OpenSettings(xbmc.player.musicviz)</onclick>
						</item>
						<!-- Visualisation Presets List -->
						<item id="10">
							<label>13407</label>
							<icon>osd/textbox.png</icon>
							<onclick>ActivateWindow(122)</onclick>
						</item>
					</content>
				</control>	
			</control>
		</control>
	</controls>

</window>