<?xml version="1.0" encoding="UTF-8"?>
<window>

	<!-- videoosd -->
	<defaultcontrol always="true">9000</defaultcontrol>
	<onload>Control.SetFocus(9000,2)</onload>
	<zorder>3</zorder>

	<controls>
		<control type="group">
			<visible>!Window.IsVisible(10123) + !Window.IsVisible(10124) + !Window.IsVisible(10610) + !Window.IsVisible(10611) + !Window.IsVisible(10109) + !Window.IsVisible(10125) + !Window.IsVisible(10153)</visible>
			<control type="grouplist">
				<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDV</include>
				<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDH</include>
				<visible>!Window.IsVisible(fullscreeninfo)</visible>
				<control type="list" id="9000">
					<focusposition>0</focusposition>
					<scrolltime>200</scrolltime>
					<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDVMenu</include>
					<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDHMenu</include>
					<animation effect="slide" start="0,0" end="1800,0" time="0" condition="Skin.String(HOM.View1.BBSidebar,RIGHT) + !Skin.HasSetting(ForceOSDBottom)">Conditional</animation>
					<animation effect="slide" start="0,0" end="0,960" time="0" condition="Skin.String(HOM.View1.BBSidebar,BOTTOM) | Skin.HasSetting(ForceOSDBottom)">Conditional</animation>

					<itemlayout width="80" height="80">
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$INFO[Skin.String(Color.SBIconNF)]">$INFO[ListItem.Icon]</texture>
						</control>
					</itemlayout>

					<focusedlayout width="80" height="80">
						<control type="button">
							<texturefocus></texturefocus>
							<texturenofocus></texturenofocus>
							<onfocus>SetProperty(MenuID,$INFO[Container(9000).ListItem.Label])</onfocus>
							<onfocus>SetProperty(MenuIcon,$INFO[Container(9000).ListItem.Icon])</onfocus>
							<onfocus>SetProperty(MenuCategory,$INFO[Container(9000).ListItem.Property(LabelID)])</onfocus>
						</control>
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[CategoryColor]">$INFO[ListItem.Icon]</texture>
						</control>
					</focusedlayout>
					<content>
						<item id="1">
							<label>-</label>
							<icon>osd/skipprevious.png</icon>
							<onclick>PlayerControl(SmallSkipBackward)</onclick>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
						</item>			
						<item id="2">
							<label>-</label>
							<icon>osd/rewind.png</icon>
							<onclick>PlayerControl(Rewind)</onclick>
							<visible>Player.SeekEnabled</visible>
						</item>		
						<item id="3">
							<label>-</label>
							<icon>osd/play.png</icon>
							<onclick>PlayerControl(Play)</onclick>
						</item>
						<item id="4">
							<label>-</label>
							<icon>osd/stop.png</icon>
							<onclick>PlayerControl(Stop)</onclick>
							<visible></visible>
						</item>
						<item id="6">
							<label>-</label>
							<icon>osd/ffwd.png</icon>
							<onclick>PlayerControl(Forward)</onclick>
							<visible>Player.SeekEnabled</visible>
						</item>	
						<item id="7">
							<label>-</label>
							<icon>osd/skipnext.png</icon>
							<onclick>PlayerControl(SmallSkipForward)</onclick>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
						</item>				
						<item id="8">
							<label>-</label>
							<icon>osd/minus.png</icon>
							<onclick>PlayerControl(Previous)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>
						<item id="9">
							<label>-</label>
							<icon>osd/plus.png</icon>
							<onclick>PlayerControl(Next)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>
						<item id="10">
							<label>-</label>
							<icon>osd/record.png</icon>
							<onclick>PlayerControl(Record)</onclick>
							<visible>Player.CanRecord</visible>
						</item>					 
					</content>
				</control>

				<control type="list" id="9001">
					<focusposition>0</focusposition>
					<scrolltime>200</scrolltime>
					<include condition="Skin.String(HOM.View1.BBLay,VERTICAL) + !Skin.HasSetting(ForceOSDBottom)">OSDVMenu</include>
					<include condition="Skin.String(HOM.View1.BBLay,HORIZONTAL) | Skin.HasSetting(ForceOSDBottom)">OSDHMenu</include>
					<animation effect="slide" start="0,0" end="1800,0" time="0" condition="Skin.String(HOM.View1.BBSidebar,RIGHT) + !Skin.HasSetting(ForceOSDBottom)">Conditional</animation>
					<animation effect="slide" start="0,0" end="0,960" time="0" condition="Skin.String(HOM.View1.BBSidebar,BOTTOM) | Skin.HasSetting(ForceOSDBottom)">Conditional</animation>

					<itemlayout width="80" height="80">
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$INFO[Skin.String(Color.SBIconNF)]">$INFO[ListItem.Icon]</texture>
						</control>
					</itemlayout>

					<focusedlayout width="80" height="80">
						<control type="button">
							<texturefocus></texturefocus>
							<texturenofocus></texturenofocus>
							<onfocus>SetProperty(MenuID,$INFO[Container(9000).ListItem.Label])</onfocus>
							<onfocus>SetProperty(MenuIcon,$INFO[Container(9000).ListItem.Icon])</onfocus>
							<onfocus>SetProperty(MenuCategory,$INFO[Container(9000).ListItem.Property(LabelID)])</onfocus>
						</control>
						<control type="image">
							<left>15</left>
							<top>15</top>
							<width>50</width>
							<height>50</height>
							<align>center</align>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="$VAR[CategoryColor]">$INFO[ListItem.Icon]</texture>
						</control>
					</focusedlayout>
					<content>
						<item id="1">
							<label>36501</label>
							<icon>material/info1.png</icon>
							<onclick>ActivateWindow(fullscreeninfo)</onclick>
						</item>
						<item id="1">
							<label>36501</label>
							<icon>material/play.png</icon>
							<onclick>StereoMode</onclick>
							<visible>VideoPlayer.IsStereoscopic</visible>
						</item>
						<!-- videosettings -->
						<item id="2">
							<label>$LOCALIZE[291]</label>
							<label2>$LOCALIZE[5]</label2>
							<icon>osd/video.png</icon>
							<onclick>ActivateWindow(123)</onclick>
						</item>
						<!-- audiosettings -->
						<item id="3">
							<label>$LOCALIZE[292]</label>
							<label2>$LOCALIZE[5]</label2>
							<icon>osd/audio.png</icon>
							<onclick>ActivateWindow(124)</onclick>
						</item>
						<!-- bookmarks -->
						<item id="4">
							<label>298</label>
							<icon>material/editlayer.png</icon>
							<onclick>ActivateWindow(125)</onclick>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
						</item>
						<!-- subtitles -->
						<item id="5">
							<label>287</label>
							<icon>DefaultAddonSubtitles.png</icon>
							<onclick>ActivateWindow(SubtitleSearch)</onclick>
							<visible>!VideoPlayer.Content(LiveTV)</visible>
						</item>
						<!-- channels -->
						<item id="6">
							<label>19019</label>
							<icon>material/list.png</icon>
							<onclick>ActivateWindow(PVROSDChannels)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>
						<!-- channelepg -->
						<item id="7">
							<label>4</label>
							<icon>DefaultAddonPVRClient.png</icon>
							<onclick>ActivateWindow(PVROSDGuide)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>
						<!-- teletext -->
						<item id="8">
							<label>23050</label>
							<icon>DefaultAddonTvInfo.png</icon>
							<onclick>ActivateWindow(Teletext)</onclick>
							<visible>VideoPlayer.Content(LiveTV)</visible>
						</item>	
						<!-- dvdmenu -->
						<item id="9">
							<label>33061</label>
							<icon>material/artbox.png</icon>
							<onclick>PlayerControl(ShowVideoMenu)</onclick>
							<visible>VideoPlayer.HasMenu</visible>
						</item>		
					</content>
				</control>	
			</control>
		</control>
	</controls>

</window>